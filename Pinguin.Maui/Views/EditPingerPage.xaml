<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:models="clr-namespace:Pinguin.Maui.Models"
             x:Class="Pinguin.Maui.Views.EditPingerPage">

    <ContentPage.BindingContext>
        <models:EditPingerModel />
    </ContentPage.BindingContext>

    <VerticalStackLayout>
        <Editor Placeholder="name..."
                Text="{Binding Name}" />

        <Editor Placeholder="url..."
                Text="{Binding Url}" />

        <Editor Placeholder="interval..."
                Text="{Binding IntervalMinutes}" />

        <Button Text="Save" />
    </VerticalStackLayout>

</ContentPage>